{
	"name": "__MSG_extName__",
	"version": "0.0.86",
	"manifest_version": 3,
	"default_locale": "en",
	"description": "__MSG_extDescription__",
	"homepage_url": "https://mangatranslator.ai",
	"icons": {
		"16": "icons/16x16.png",
		"19": "icons/19x19.png",
		"48": "icons/48x48.png",
		"128": "icons/128x128.png"
	},
	"action": {
		"default_icon": "icons/128x128-disabled.png",
		"default_popup": "popup.html"
	},
	"background": {
		"scripts": [
			"js/background.js"
		],
		"persistent": false
	},
	"web_accessible_resources": [
		{
			"extension_ids": [],
			"matches": [
				"<all_urls>"
			],
			"resources": [
				"fonts/*",
				"icons/*"
			]
		}
	],
	"permissions": [
		"contextMenus",
		"cookies",
		"scripting",
		"storage",
		"tabs",
		"declarativeNetRequest"
	],
        "host_permissions": [
                "https://ichigoreader.com/*",
                "http://159.223.84.83:8000/*",
                "*://*/*",
                "<all_urls>"
        ],
	"content_security_policy": {
		"extension_pages": "script-src 'self'; script-src-elem 'self'; object-src 'self'"
	},
	"content_scripts": [
		{
			"all_frames": true,
			"matches": [
				"<all_urls>"
			],
			"js": [
				"js/content.js",
				"js/setExtensionIcon.js"
			]
		}
	]
}